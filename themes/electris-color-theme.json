{
	"name": "electris",
	"colors": {
		// main editors
		"editor.background": "#181e29",
		"editor.foreground": "#efefef",
		"editor.lineHighlightBorder": "#263040",
		"editorLineNumber.foreground": "#efefef4d",
		"editorLineNumber.activeForeground": "#399ef4", // aka currently selected line
		"editorWhitespace.foreground": "#efefef80", // aka $tab arrows and space dots added during text selection
		"editorIndentGuide.background": "#263040", // indentation lines
		"editorIndentGuide.activeBackground": "#535a6b",
		"editorCursor.foreground": "#efefef",
		"editor.selectionBackground": "#399ef440",
		"editor.selectionHighlightBackground": "#efefef2a", // aka variables matching the one under cursor
		"editorInfo.foreground": "#9fcff980", // squigglies!
		"editor.findMatchBackground": "#399ef460", // aka first match
		"editor.rangeHighlightBackground": "#efefef0d", // background of line of first match
		"editor.findMatchHighlightBackground": "#399ef435", // aka all other matches
		"editorLink.activeForeground": "#399ef4", // when you hold ⌘ on a variable
		"editorBracketMatch.background": "#399ef445",
		"editorBracketHighlight.foreground1": "#47c5ff",
		"editorBracketHighlight.foreground2": "#ff808d",
		"editorBracketHighlight.foreground3": "#61dc8d",
		"editorBracketHighlight.foreground4": "#ffffbf",
		"diffEditor.insertedTextBackground": "#1f3a1fa9",
		"diffEditor.removedTextBackground": "#3f1a1aa9",
		"editorGutter.modifiedBackground": "#4eb071",
		"editorGutter.addedBackground": "#399ef4",
		"editorGutter.deletedBackground": "#da6771",
		"editorRuler.foreground": "#efefef40",
		
		// editor tabs
		"tab.border": "#00000033",
		"tab.activeBorder": "#399ef4",
		"tab.inactiveBackground": "#212a39",
		"tab.activeModifiedBorder": "#399ef4",
		"tab.inactiveModifiedBorder": "#225e92",
		"tab.unfocusedActiveModifiedBorder": "#2d7ec3",
		"tab.unfocusedInactiveModifiedBorder": "#225e92",
		"editorGroup.dropBackground": "#399ef480", // aka dragging to split screen in half
		"editorGroup.focusedEmptyBorder": "#399ef4",
		"editorGroupHeader.tabsBackground": "#1c2431", // aka background behind tabs
		
		// file viewer
		"focusBorder": "#399ef4",
		"foreground": "#efefef",
		"editorError.foreground": "#da6771",
		"list.activeSelectionBackground": "#399ef435", // select by arrow keys
		"list.activeSelectionForeground": "#efefef",
		"list.hoverBackground": "#efefef18",
		"list.inactiveSelectionBackground": "#efefef30",
		"activityBar.background": "#399ef435",
		"activityBarBadge.background": "#399ef4", // notification number circle, like how many files changed on source control
		"activityBarBadge.foreground": "#efefef",
		"sideBar.background": "#1c2431",
		"sideBarSectionHeader.background": "#399ef450", // dropdown collapser things
		"gitDecoration.modifiedResourceForeground": "#4eb071",
		"gitDecoration.untrackedResourceForeground": "#399ef4",
		"gitDecoration.deletedResourceForeground": "#da6771",
		"gitDecoration.conflictingResourceForeground": "#fff099",
		"gitDecoration.ignoredResourceForeground": "#717a8dde",
		
		// file viewer (searching all files)
		"badge.background": "#399ef4",
		"badge.foreground": "#efefef",

		// run and debug
		"dropdown.background": "#263041",
		
		// popups
		"button.background": "#399ef4", // just primary button(s) specifically
		"button.foreground": "#efefef",
		"inputOption.activeBorder": "#399ef4", // ⌘+F -> border for buttons like regex
		"editorWidget.background": "#1c2431", // for popups like ⌘+F
		"editorHoverWidget.background": "#1c2431", // for boxes when hovering over variables
		"peekView.border": "#399ef4",
		"peekViewEditor.background": "#13182080",
		"peekViewResult.background": "#1c2431", // background of list on right side
		"peekViewTitle.background": "#181e29",
		"peekViewEditor.matchHighlightBackground": "#00000000",
		"peekViewResult.matchHighlightBackground": "#00000000",
		"debugToolBar.background": "#212a39",

		// command palette
		"input.background": "#263041",
		"list.highlightForeground": "#399ef4", // matches search
		"pickerGroup.border": "#efefef1a", // separates some commands in palette
		"selection.background": "#399ef4",

		// settings (like keyboard shortcuts)
		"list.focusForeground": "#efefef",

		// terminal
		"panel.background": "#1c2431",
		"panel.border": "#efefef1a", // edge touching the editor space
		"panelTitle.activeBorder": "#efefef80", // underline for active tab, like "Terminal"
		"panelTitle.inactiveForeground": "#efefef80", // unselected text color
		"terminal.foreground": "#00ff00",
		"terminal.background": "#000000",
		"terminal.selectionBackground": "#0a219c",
		"terminal.ansiBlack": "#666666",
		"terminal.ansiBlue": "#399EF4",
		"terminal.ansiBrightBlack": "#666666",
		"terminal.ansiBrightBlue": "#399EF4",
		"terminal.ansiBrightCyan": "#21C5C7",
		"terminal.ansiBrightGreen": "#4EB071",
		"terminal.ansiBrightMagenta": "#B168DF",
		"terminal.ansiBrightRed": "#DA6771",
		"terminal.ansiBrightWhite": "#efefef",
		"terminal.ansiBrightYellow": "#fff099",
		"terminal.ansiCyan": "#21C5C7",
		"terminal.ansiGreen": "#4EB071",
		"terminal.ansiMagenta": "#B168DF",
		"terminal.ansiRed": "#DA6771",
		"terminal.ansiWhite": "#efefef",
		"terminal.ansiYellow": "#fff099",

		// other stuff
		"titleBar.activeBackground": "#131820",
		"statusBar.background": "#131820",
		"statusBar.focusBorder": "#efefef40",
		"statusBar.debuggingBackground": "#399ef4",
		"statusBar.debuggingForeground": "#efefef",
		"statusBar.noFolderBackground": "#131820",
		"statusBarItem.activeBackground": "#399ef480",
		"statusBarItem.hoverBackground": "#efefef1a",
		"statusBarItem.remoteBackground": "#399ef4",
		"statusBarItem.remoteForeground": "#efefef",

		// unknown/unconsidered
		"list.dropBackground": "#878b0090",
		"editor.wordHighlightBackground": "#878b0090",
		"editor.wordHighlightStrongBackground": "#878b0090",
		"editorMarkerNavigation.background": "#878b0090",
	},
	"semanticHighlighting": true,
	"tokenColors": [
		// ugly yellow -- unconsidered tokens
		{
			"scope": "source, electris.source",
			"settings": {
				"foreground": "#f6ff00"
			}
		},

		// light blue -- defined variables/object properties
		{
			"scope": "electris.source-code.variable",
			"settings": {
				"foreground": "#9fcff9"
			}
		},

		// blue -- operators/keywords
		{
			"scope": "electris.source-code.operator",
			"settings": {
				"foreground": "#339ef4"
			}
		},

		// orange -- primitive literals
		{
			"scope": "electris.source-code.primitive-literal",
			"settings": {
				"foreground": "#eea760"
			}
		},

		// red -- escapes
		{
			"scope": "electris.source-code.escape",
			"settings": {
				"foreground": "#d15551"
			}
		},
		
		// gray -- comments
		{
			"scope": "electris.source-code.comment",
			"settings": {
				"foreground": "#717a8dde"
			}
		},

		// green italicized -- types
		{
			// semantic: "support.class"
			// (also includes first layer of generic lists for function calls)
			"scope": "electris.source-code.type, support.class, electris.source-code.function-call electris.source-code.type.inner",
			"settings": {
				"foreground": "#4eb071",
				"fontStyle": "italic"
			}
		},

		// green italicized fading -- generic type lists
		{
			"scope": "electris.source-code.type.inner, electris.source-code.function-call electris.source-code.type.inner electris.source-code.type.inner",
			"settings": {
				"foreground": "#4eb071b0",
				"fontStyle": "italic"
			}
		},
		{
			"scope": "electris.source-code.type.inner electris.source-code.type.inner, electris.source-code.function-call electris.source-code.type.inner electris.source-code.type.inner electris.source-code.type.inner",
			"settings": {
				"foreground": "#4eb07170",
				"fontStyle": "italic"
			}
		},
		{
			"scope": "electris.source-code.type.inner electris.source-code.type.inner electris.source-code.type.inner, electris.source-code.function-call electris.source-code.type.inner electris.source-code.type.inner electris.source-code.type.inner electris.source-code.type.inner",
			"settings": {
				"foreground": "#4eb07140",
				"fontStyle": "italic"
			}
		},

		// turquoise -- function/method calls
		{
			"scope": "electris.source-code.function-call",
			"settings": {
				"foreground": "#21c5c7"
			}
		},

		// white -- punctuation for scopes/parameter lists
		{
			"scope": "electris.source-code.punctuation",
			"settings": {
				"foreground": "#efefef"
			}
		},
		

		// TODO: json tokens


		// white -- unstyled text
		{
			"scope": "text, electris.text",
			"settings": {
				"foreground": "#efefef"
			}
		}
		
		// TODO: markdown tokens
	]
}
