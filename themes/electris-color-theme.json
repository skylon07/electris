{
	"name": "electris",
	"colors": {
      	// main editors
		"editor.background": "#181e29",
		"editor.foreground": "#efefef",
		"editor.lineHighlightBorder": "#263040",
		"editorLineNumber.foreground": "#efefef4d",
		"editorLineNumber.activeForeground": "#399ef4", // aka currently selected line
		"editorWhitespace.foreground": "#efefef80", // aka $tab arrows and space dots added during text selection
		"editorIndentGuide.background1": "#263040", // indentation lines
		"editorIndentGuide.activeBackground1": "#535a6b",
		"editorCursor.foreground": "#efefef",
		"editor.selectionBackground": "#399ef440",
		"editor.selectionHighlightBackground": "#efefef2a", // aka variables matching the one under cursor
		"editor.wordHighlightBackground": "#efefef2a", // similar to the above (first found using python)
		"editor.wordHighlightStrongBackground": "#efefef2a", // also similar to the above (also found using python)
		"editorInfo.foreground": "#9fcff980", // squigglies!
		"editor.findMatchBackground": "#399ef460", // aka first match
		"editor.rangeHighlightBackground": "#efefef0d", // background of line of first match
		"editor.findMatchHighlightBackground": "#399ef435", // aka all other matches
		"editorLink.activeForeground": "#399ef4", // when you hold ⌘ on a variable
		"editorBracketMatch.background": "#399ef445",
		"editorBracketHighlight.foreground1": "#47c5ff",
		"editorBracketHighlight.foreground2": "#ff808d",
		"editorBracketHighlight.foreground3": "#61dc8d",
		"editorBracketHighlight.foreground4": "#ffffbf",
		"diffEditor.insertedLineBackground": "#1f3a1fa9",
		"diffEditor.insertedTextBackground": "#3e743ea9",
		"diffEditor.removedLineBackground": "#4f1a1aa9",
		"diffEditor.removedTextBackground": "#8e3434a9",
		"editorGutter.modifiedBackground": "#399ef4",
		"editorGutter.addedBackground": "#4eb071",
		"editorGutter.deletedBackground": "#da6771",
		"editorRuler.foreground": "#efefef40",
		
		// editor tabs
		"tab.border": "#00000033",
		"tab.activeBorder": "#399ef4",
		"tab.inactiveBackground": "#212a39",
		"tab.activeModifiedBorder": "#399ef4",
		"tab.inactiveModifiedBorder": "#225e92",
		"tab.unfocusedActiveModifiedBorder": "#2d7ec3",
		"tab.unfocusedInactiveModifiedBorder": "#225e92",
		"editorGroup.dropBackground": "#399ef480", // aka dragging to split screen in half
		"editorGroup.focusedEmptyBorder": "#399ef4",
		"editorGroupHeader.tabsBackground": "#1c2431", // aka background behind tabs
		
		// file viewer
		"focusBorder": "#399ef4",
		"foreground": "#efefef",
		"editorError.foreground": "#da6771",
		"list.activeSelectionBackground": "#399ef435", // select by arrow keys
		"list.activeSelectionForeground": "#efefef",
		"list.hoverBackground": "#efefef18",
		"list.inactiveSelectionBackground": "#efefef30",
		"list.dropBackground": "#399ef480", // drag and drop!
		"activityBar.background": "#399ef435",
		"activityBarBadge.background": "#399ef4", // notification number circle, like how many files changed on source control
		"activityBarBadge.foreground": "#efefef",
		"sideBar.background": "#1c2431",
		"sideBarSectionHeader.background": "#399ef450", // dropdown collapser things
		"gitDecoration.modifiedResourceForeground": "#399ef4",
		"gitDecoration.stageModifiedResourceForeground": "#9ccffa",
		"gitDecoration.renamedResourceForeground": "#9ccffa",
		"gitDecoration.untrackedResourceForeground": "#4eb071",
		"gitDecoration.addedResourceForeground": "#a7d8b8",
		"gitDecoration.deletedResourceForeground": "#da6771",
		"gitDecoration.stageDeletedResourceForeground": "#edb3b8",
		"gitDecoration.conflictingResourceForeground": "#fff099",
		"gitDecoration.ignoredResourceForeground": "#717a8dde",
		
		// file viewer (searching all files)
		"badge.background": "#399ef4",
		"badge.foreground": "#efefef",

		// run and debug
		"dropdown.background": "#263041",
		
		// popups
		"button.background": "#399ef4", // just primary button(s) specifically
		"button.foreground": "#efefef",
		"inputOption.activeBorder": "#399ef4", // ⌘+F -> border for buttons like regex
		"editorWidget.background": "#1c2431", // for popups like ⌘+F
		"editorHoverWidget.background": "#212a39", // for boxes when hovering over variables
		"peekView.border": "#399ef4",
		"peekViewEditor.background": "#13182080",
		"peekViewResult.background": "#1c2431", // background of list on right side
		"peekViewTitle.background": "#181e29",
		"peekViewEditor.matchHighlightBackground": "#00000000",
		"peekViewResult.matchHighlightBackground": "#00000000",
		"debugToolBar.background": "#212a39",

		// command palette
		"input.background": "#263041",
		"list.highlightForeground": "#399ef4", // matches search
		"pickerGroup.border": "#efefef1a", // separates some commands in palette
		"selection.background": "#399ef4",

		// settings (like keyboard shortcuts)
		"list.focusForeground": "#efefef",

		// terminal
		"panel.background": "#1c2431",
		"panel.border": "#efefef1a", // edge touching the editor space
		"panelTitle.activeBorder": "#efefef80", // underline for active tab, like "Terminal"
		"panelTitle.inactiveForeground": "#efefef80", // unselected text color
		"terminal.foreground": "#00ff00",
		"terminal.background": "#000000",
		"terminal.selectionBackground": "#0a219c",
		"terminal.ansiBlack": "#666666",
		"terminal.ansiBlue": "#399EF4",
		"terminal.ansiBrightBlack": "#666666",
		"terminal.ansiBrightBlue": "#399EF4",
		"terminal.ansiBrightCyan": "#21C5C7",
		"terminal.ansiBrightGreen": "#4EB071",
		"terminal.ansiBrightMagenta": "#B168DF",
		"terminal.ansiBrightRed": "#DA6771",
		"terminal.ansiBrightWhite": "#efefef",
		"terminal.ansiBrightYellow": "#fff099",
		"terminal.ansiCyan": "#21C5C7",
		"terminal.ansiGreen": "#4EB071",
		"terminal.ansiMagenta": "#B168DF",
		"terminal.ansiRed": "#DA6771",
		"terminal.ansiWhite": "#efefef",
		"terminal.ansiYellow": "#fff099",

		// other stuff
		"titleBar.activeBackground": "#131820",
		"statusBar.background": "#131820",
		"statusBar.focusBorder": "#efefef40",
		"statusBar.debuggingBackground": "#399ef4",
		"statusBar.debuggingForeground": "#efefef",
		"statusBar.noFolderBackground": "#131820",
		"statusBarItem.activeBackground": "#399ef480",
		"statusBarItem.hoverBackground": "#efefef1a",
		"statusBarItem.remoteBackground": "#399ef4",
		"statusBarItem.remoteForeground": "#efefef",

		// unknown/unconsidered
		"editorMarkerNavigation.background": "#878b0090",
	},
	"semanticHighlighting": true,
	"tokenColors": [
		// white -- preview source (and non-electris code)
		{
			"scope": "source",
			"settings": {
				"foreground": "#efefef"
			}
		},

		// yellow - unrecognized source
		{
			"scope": "electris.source",
			"settings": {
				"foreground": "#f6ff00"
			}
		},

		// purple bold strikethrough - debugging scope
		{
			"scope": "electris.debug-tokens",
			"settings": {
				"foreground": "#c050ff",
				"fontStyle": "strikethrough"
			}
		},

		// light blue -- defined variables/object properties
		{
			"scope": "electris.source-code.variable",
			"settings": {
				"foreground": "#9fcff9"
			}
		},

		// light blue(60%)/green(40%) -- variables in record/function types
		{
			"scope": "electris.source-code.types.type electris.source-code.variable",
			"settings": {
				"foreground": "#7ec2c2",
			}
		},

		// light blue(60%)/green(40%) fading -- variables in generic lists
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.variable",
			"settings": {
				"foreground": "#7ec2c2b3"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.variable",
			"settings": {
				"foreground": "#7ec2c27d"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.variable",
			"settings": {
				"foreground": "#7ec2c257"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.variable",
			"settings": {
				"foreground": "#7ec2c23d"
			}
		},

		// blue -- operators/keywords
		{
			"scope": "electris.source-code.operator",
			"settings": {
				"foreground": "#339ef4"
			}
		},

		// blue(60%)/green(40%) fading -- operators in generic lists
		{
			"scope": "electris.source-code.types.type electris.source-code.operator",
			"settings": {
				"foreground": "#3da5bfd4"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.operator",
			"settings": {
				"foreground": "#3da5bfb3"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.operator",
			"settings": {
				"foreground": "#3da5bf7d"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.operator",
			"settings": {
				"foreground": "#3da5bf57"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.operator",
			"settings": {
				"foreground": "#3da5bf3d"
			}
		},

		// orange -- primitive literals
		{
			"scope": "electris.source-code.primitive-literal",
			"settings": {
				"foreground": "#eea760"
			}
		},

		// red -- escapes
		{
			"scope": "electris.source-code.escape",
			"settings": {
				"foreground": "#d15551"
			}
		},
		
		// gray -- comments
		{
			"scope": "electris.source-code.comment",
			"settings": {
				"foreground": "#717a8dde"
			}
		},

		// gray tinted orange -- documentation
		{
			"scope": "electris.source-code.documentation",
			"settings": {
				"foreground": "#af9076de"
			}
		},

		// green italicized -- types
		{
			// semantic: "support.class"
			// (also includes first layer of non-generic type arguments)
			"scope": "electris.source-code.types.type, support.class, electris.source-code.types.type-recursive",
			"settings": {
				"foreground": "#4eb071",
				"fontStyle": "italic"
			}
		},

		// green italicized fading -- generic type lists and other "recursive"/"depth-ful" type syntax
		{
			"scope": "electris.source-code.types.type-recursive",
			"settings": {
				"foreground": "#4eb071b3",
				"fontStyle": "italic"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive",
			"settings": {
				"foreground": "#4eb0717d",
				"fontStyle": "italic"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive",
			"settings": {
				"foreground": "#4eb07157",
				"fontStyle": "italic"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive",
			"settings": {
				"foreground": "#4eb0713d",
				"fontStyle": "italic"
			}
		},
		{
			"scope": "electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive, electris.source-code.types electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.operator, electris.source-code.types electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.types.type-recursive electris.source-code.variable",
			"settings": {
				"foreground": "#da6771",
				"fontStyle": "italic"
			}
		},

		// turquoise -- function/method calls
		{
			"scope": "electris.source-code.function-call",
			"settings": {
				"foreground": "#21c5c7"
			}
		},

		// white -- punctuation for scopes/parameter lists
		{
			"scope": "electris.source-code.punctuation",
			"settings": {
				"foreground": "#efefef"
			}
		},


		// white -- unstyled text
		{
			"scope": "text, electris.text",
			"settings": {
				"foreground": "#efefef"
			}
		},
		// orange -- unstyled "source-text"
		{
			"scope": "electris.source-text",
			"settings": {
				"foreground": "#eea760"
			}
		},


		// blue -- style operators
		{
			"scope": "electris.markdown.style-operator",
			"settings": {
				"foreground": "#339ef4"
			}
		},
		// turquoise -- extended style operators
		{
			"scope": "electris.markdown.extended.style-operator",
			"settings": {
				"foreground": "#21c5c7"
			}
		},

		// bold -- bold style
		{
			"scope": "electris.markdown.bold",
			"settings": {
				"fontStyle": "bold"
			}
		},
		// italic -- emphasized style
		{
			"scope": "electris.markdown.emphasized",
			"settings": {
				"fontStyle": "italic"
			}
		},
		// italic bold -- bold and emphasized style
		{
			"scope": "electris.markdown.emphasized electris.markdown.bold, electris.markdown.bold electris.markdown.emphasized",
			"settings": {
				"fontStyle": "italic bold"
			}
		},
		// strikethrough -- strikethrough style
		{
			"scope": "electris.markdown.strikethrough",
			"settings": {
				"fontStyle": "strikethrough"
			}
		},
		// highlighted -- highlighted style
		{
			"scope": "electris.markdown.extended.highlighted",
			"settings": {
				"foreground": "#f6ff00"
			}
		},

		// bold underline -- heading
		{
			"scope": "electris.markdown.heading",
			"settings": {
				"fontStyle": "bold underline"
			}
		},
		// off-white bold -- horizontal rule
		{
			"scope": "electris.markdown.horizontal-rule",
			"settings": {
				"foreground": "#efefef90",
				"fontStyle": "italic bold"
			}
		},
		// bold bold underline -- bold style (in heading)
		{
			"scope": "electris.markdown.heading electris.markdown.bold",
			"settings": {
				"fontStyle": "bold bold underline"
			}
		},
		// italic bold underline -- emphasized style (in heading)
		{
			"scope": "electris.markdown.heading electris.markdown.emphasized",
			"settings": {
				"fontStyle": "italic bold underline"
			}
		},
		// italic bold bold underline -- bold and emphasized style (in heading)
		{
			"scope": "electris.markdown.heading electris.markdown.emphasized electris.markdown.bold, electris.markdown.heading electris.markdown.bold electris.markdown.emphasized",
			"settings": {
				"fontStyle": "italic bold bold underline"
			}
		},
		// strikethrough bold underline -- strikethrough style (in heading)
		{
			"scope": "electris.markdown.heading electris.markdown.strikethrough",
			"settings": {
				"fontStyle": "strikethrough bold underline"
			}
		},

		// off-white -- subscript/superscript
		{
			"scope": "electris.markdown.extended.subscript, electris.markdown.extended.superscript",
			"settings": {
				"foreground": "#efefef90"
			}
		},

		// off-white -- code
		{
			"scope": "electris.markdown.code",
			"settings": {
				"foreground": "#efefef90"
			}
		},

		// turquoise -- code language
		{
			"scope": "electris.markdown.code-lang",
			"settings": {
				"foreground": "#21c5c7"
			}
		},

		// off-white -- image links
		{
			"scope": "electris.markdown.image-link",
			"settings": {
				"foreground": "#efefef90"
			}
		},

		// red -- escapes
		{
			"scope": "electris.markdown.escape",
			"settings": {
				"foreground": "#d15551"
			}
		},

		// light blue -- link path
		{
			"scope": "electris.markdown.link-path",
			"settings": {
				"foreground": "#9fcff9"
			}
		},

		// off-white -- link hover title
		{
			"scope": "electris.markdown.link-hover-title",
			"settings": {
				"foreground": "#efefef90"
			}
		},


		// blue -- tag braces/assignment
		{
			"scope": "electris.xml.tag-brace, electris.xml.property-assignment",
			"settings": {
				"foreground": "#339ef4"
			}
		},

		// green italicized -- tag label
		{
			"scope": "electris.xml.tag-label",
			"settings": {
				"foreground": "#4eb071",
				"fontStyle": "italic"
			}
		},

		// light blue -- tag properties
		{
			"scope": "electris.xml.property",
			"settings": {
				"foreground": "#9fcff9"
			}
		},

		// white -- tag property punctuation
		{
			"scope": "electris.xml.property-punctuation",
			"settings": {
				"foreground": "#efefef"
			}
		},

		// red -- invalid tag property
		{
			"scope": "electris.xml.property-invalid",
			"settings": {
				"foreground": "#d15551"
			}
		},

		// orange -- tag property values
		{
			"scope": "electris.xml.property-value",
			"settings": {
				"foreground": "#eea760"
			}
		},

		// gray -- comments
		{
			"scope": "electris.xml.comment",
			"settings": {
				"foreground": "#717a8dde"
			}
		},


		// gray -- comments
		{
			"scope": "electris.gitignore.comment",
			"settings": {
				"foreground": "#717a8dde"
			}
		},

		// light blue -- filenames (directory words)
		{
			"scope": "electris.gitignore.file",
			"settings": {
				"foreground": "#9fcff9"
			}
		},

		// white -- directory punctuation
		{
			"scope": "electris.gitignore.punctuation",
			"settings": {
				"foreground": "#efefef"
			}
		},

		// blue -- logical operations
		{
			"scope": "electris.gitignore.operator",
			"settings": {
				"foreground": "#339ef4"
			}
		},
	]
}
