{
    "name": "electris",
    "displayName": "electris",
    "description": "An electric blue theme for VSCode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.72.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "markdown.previewStyles": [
            "./themes/vscode-markdown-overrides.css"
        ],
        "themes": [
            {
                "label": "electris",
                "uiTheme": "vs-dark",
                "path": "./themes/electris-color-theme.json"
            }
        ],
        "configurationDefaults": {
            "[dart]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[python]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[json]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[jsonc]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[javascript]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[javascriptreact]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[kotlin]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[kotlinscript]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[java]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[markdown]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[xml]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[html]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[jsx-tags]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[css]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[less]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[ignore]": {
                "editor.semanticHighlighting.enabled": false
            },
            "[yaml]": {
                "editor.semanticHighlighting.enabled": false
            }
        },
        "grammars": [
            {
                "path": "./syntaxes/dart-source.tmLanguage.json",
                "scopeName": "electris.source.dart",
                "language": "dart"
            },

            {
                "path": "./syntaxes/python-source.tmLanguage.json",
                "scopeName": "electris.source.python",
                "language": "python"
            },

            {
                "path": "./syntaxes/json-source.tmLanguage.json",
                "scopeName": "electris.source.json",
                "language": "json"
            },

            {
                "path": "./syntaxes/json-source.tmLanguage.json",
                "scopeName": "electris.source.json",
                "language": "jsonc"
            },

            {
                "path": "./syntaxes/javascript-source.tmLanguage.json",
                "scopeName": "electris.source.javascript",
                "language": "javascript",
                "embeddedLanguages": {
                    "electris.source-text.embedded.jsx-tags": "jsx-tags"
                }
            },
            {
                "path": "./syntaxes/javascript-source.tmLanguage.json",
                "scopeName": "electris.source.javascript",
                "language": "javascriptreact",
                "embeddedLanguages": {
                    "electris.source-text.embedded.jsx-tags": "jsx-tags"
                }
            },
            {
                "path": "./syntaxes/kotlin-source.tmLanguage.json",
                "scopeName": "electris.source.kotlin",
                "language": "kotlin"
            },
            {
                "path": "./syntaxes/kotlin-source.tmLanguage.json",
                "scopeName": "electris.source.kotlin",
                "language": "kotlinscript"
            },
            {
                "path": "./syntaxes/java-source.tmLanguage.json",
                "scopeName": "electris.source.java",
                "language": "java"
            },

            {
                "path": "./syntaxes/markdown-text.tmLanguage.json",
                "scopeName": "electris.text.markdown",
                "language": "markdown",
                "embeddedLanguages": {
                    "electris.source.embedded.dart": "dart",
                    "electris.source.embedded.python": "python",
                    "electris.source.embedded.json": "json",
                    "electris.source.embedded.javascript": "javascript",
                    "electris.text.embedded.html": "html"
                }
            },

            {
                "path": "./syntaxes/xml-like-text.tmLanguage.json",
                "scopeName": "electris.text.xml",
                "language": "xml"
            },
            {
                "path": "./syntaxes/html-text.tmLanguage.json",
                "scopeName": "electris.text.html",
                "language": "html"
            },
            {
                "path": "./syntaxes/jsx-tags-source.tmLanguage.json",
                "scopeName": "electris.source-text.jsx-tags",
                "language": "jsx-tags",
                "embeddedLanguages": {
                    "electris.source.embedded.javascript": "javascript"
                }
            },

            {
                "path": "./syntaxes/css-like-text.tmLanguage.json",
                "scopeName": "electris.text.css",
                "language": "css"
            },
            {
                "path": "./syntaxes/less-text.tmLanguage.json",
                "scopeName": "electris.text.less",
                "language": "less"
            },

            {
                "path": "./syntaxes/gitignore-text.tmLanguage.json",
                "scopeName": "electris.text.gitignore",
                "language": "ignore"
            },
            
            {
                "path": "./syntaxes/yaml-source.tmLanguage.json",
                "scopeName": "electris.source.yaml",
                "language": "yaml"
            }
        ]
    }
}